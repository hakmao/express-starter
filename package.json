{
  "name": "express-starter",
  "version": "1.3.2",
  "description": "A starter setup for Express, with Pino logging and PM2 support.",
  "homepage": "https://github.com/steven-xie/express-starter",
  "repository": "github:steven-xie/express-starter",
  "bugs": {
    "url": "https://github.com/steven-xie/express-starter/issues",
    "email": "dev@stevenxie.me"
  },
  "author": "Steven Xie <hello@stevenxie.me> (https://stevenxie.me)",
  "license": "MIT",
  "config": {
    "dev-log-level": "debug",
    "prod-log-level": "error",
    "jmespath-log-filter": "contains(name, `server`)",
    "browser-live-reload": true,
    "docker-env": "production",
    "docker-tag": "1.0.1-prod"
  },
  "scripts": {
    "dev": "./Scripts/dev.sh",
    "prod": "NODE_ENV=production ts-node --transpile-only src/server.ts",
    "start": "if [ \"$NODE_ENV\" == \"production\" ]; then npm run prod; else npm run dev; fi",
    "prettier": "prettier --write 'src/**/*.ts'",
    "pm2": "pm2 startOrRestart pm2.ecosystem.config.js --env production",
    "pm2-setup": "pm2 deploy pm2.ecosystem.config.js production setup",
    "pm2-deploy": "pm2 deploy pm2.ecosystem.config.js production",
    "pm2-update": "pm2 deploy pm2.ecosystem.config.js production update",
    "pm2-update-force": "npm run pm2-update --force",
    "docker-build": "docker-compose build",
    "docker-start": "docker-compose up",
    "docker-up": "yarn docker-start -d",
    "docker-down": "docker-compose down --volumes",
    "docker-pause": "docker-compose pause",
    "docker-exec": "docker-compose exec",
    "docker-sh": "docker-compose exec express sh",
    "docker-purge": "yarn docker-down --rmi all"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-pino-logger": "^3.0.1",
    "get-port": "^3.2.0",
    "opn": "^5.3.0",
    "pino": "^4.16.1",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.11.1",
    "@types/node": "^10.1.2",
    "@types/opn": "^5.1.0",
    "@types/pino": "^4.7.1",
    "nodemon": "^1.17.4",
    "pino-pretty": "https://github.com/pinojs/pino-pretty.git#v2.0.0-rc.1",
    "prettier": "^1.12.1"
  }
}
