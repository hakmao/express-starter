{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "A starter setup for Express, with PM2 support.",
  "main": "src/server.js",
  "repository": "https://github.com/steven-xie/express-starter",
  "author": "Steven Xie",
  "private": true,
  "config": {
    "debugLevel": "ts-express:server"
  },
  "scripts": {
    "dev": "NODE_ENV=development DEBUG=$npm_package_config_debugLevel nodemon --watch src/ src/server.js",
    "prod": "NODE_ENV=production node src/server.js",
    "start": "npm run prod",
    "pm2": "NODE_ENV=production pm2 start pm2.ecosystem.config.js"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/debug": "^0.0.30",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.7",
    "nodemon": "^1.17.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
